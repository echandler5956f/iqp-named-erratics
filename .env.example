# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=glacial_erratics
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# Production Database (if different from development)
DB_HOST_PROD=your-production-db-host
DB_NAME_PROD=glacial_erratics_prod
DB_USER_PROD=your_prod_db_user
DB_PASSWORD_PROD=your_secure_prod_db_password
DB_PORT_PROD=5432

# Application Configuration
NODE_ENV=development
PORT=3001
JWT_SECRET=your-very-strong-jwt-secret-at-least-32-characters-long

# Frontend Configuration (for development)
REACT_APP_API_URL=http://localhost:3001/api

# Production Frontend Configuration
REACT_APP_API_URL_PROD=https://your-domain.com/api

# Optional: Rate limiting and security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Optional: External storage for GIS data (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-gis-data-bucket

# Optional: Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password 